@model Camisa
@{
    ViewData["Title"] = "Registrar Camisa";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" required />
    </div>
    <div class="col-md-6">
        <label class="form-label">Marca</label>
        <select asp-for="Id_Marca" class="form-select" asp-items="ViewBag.Marcas" required>
            <option value="">-- Seleccione --</option>
        </select>
    </div>
    <div class="col-md-4"><label class="form-label">Color</label><input asp-for="Color" class="form-control" required /></div>
    <div class="col-md-4"><label class="form-label">Talla</label><input asp-for="Talla" class="form-control" required /></div>
    <div class="col-md-4"><label class="form-label">Manga</label><input asp-for="Manga" class="form-control" required /></div>

    <div class="col-md-3"><label class="form-label">Stock</label><input asp-for="Stock" type="number" min="0" class="form-control" /></div>
    <div class="col-md-3"><label class="form-label">Precio Costo</label><input asp-for="Precio_Costo" type="number" step="0.01" class="form-control" /></div>
    <div class="col-md-3"><label class="form-label">Precio Venta</label><input asp-for="Precio_Venta" type="number" step="0.01" class="form-control" /></div>
    <div class="col-md-3">
        <label class="form-label">Estante</label>
        <select asp-for="Id_Estante" class="form-select" asp-items="ViewBag.Estantes" required>
            <option value="">-- Seleccione --</option>
        </select>
    </div>
    <div class="col-md-12">
        <label class="form-label">Estado</label>
        <input asp-for="Estado" class="form-control" value="DISPONIBLE" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>
