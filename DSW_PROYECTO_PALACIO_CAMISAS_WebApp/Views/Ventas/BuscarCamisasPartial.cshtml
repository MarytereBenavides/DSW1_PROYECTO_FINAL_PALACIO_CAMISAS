@model IEnumerable<Camisa>
<table class="table table-hover">
    <thead>
        <tr><th>ID</th><th>Descripción</th><th>Marca</th><th>Color</th><th>Talla</th><th>Manga</th><th>PV</th><th>Stock</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.id_camisa</td>
                <td>@c.descripcion</td>
                <td>@c.marca_nombre</td>
                <td>@c.color</td>
                <td>@c.talla</td>
                <td>@c.manga</td>
                <td>@c.precio_venta.ToString("0.00")</td>
                <td>@c.stock</td>
                <td class="text-end"><button type="button" class="btn btn-sm btn-outline-success" onclick="seleccionarCamisa(@c.id_camisa)">Elegir</button></td>
            </tr>
        }
    </tbody>
</table>
