@model IEnumerable<DSW_PROYECTO_PALACIO_CAMISAS_WebApp.Models.Venta>

@{
    ViewData["Title"] = "Ventas con Detalles";
}

<h2 class="mb-3">Listado de Ventas con Detalles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nueva Venta</a>
</p>

@foreach (var venta in Model)
{
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <div class="d-flex justify-content-between">
                <span>
                    <strong>Venta N°:</strong> @venta.id_venta  |
                    <strong>Cliente:</strong> @venta.nombre_cliente  |
                    <strong>Fecha:</strong> @venta.fecha.ToString("dd/MM/yyyy")
                </span>
                <span>
                    <strong>Total: </strong> S/. @venta.precio_total
                </span>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered m-0">
                <thead class="table-light">
                    <tr>
                        <th>Camisa</th>
                        <th>Color</th>
                        <th>Talla</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var det in venta.DetallesTotal)
                    {
                        <tr>
                            <td>@det.Descripcion</td>
                            <td>@det.Cantidad</td>
                            <td>S/. @det.PrecioUnitario</td>
                            <td>S/. @(det.Cantidad * det.PrecioUnitario)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Details" asp-route-id="@venta.id_venta" class="btn btn-info btn-sm">Ver Detalle</a>
            <a asp-action="Edit" asp-route-id="@venta.id_venta" class="btn btn-warning btn-sm">Editar</a>
            <a asp-action="Delete" asp-route-id="@venta.id_venta" class="btn btn-danger btn-sm">Eliminar</a>
        </div>
    </div>
}
